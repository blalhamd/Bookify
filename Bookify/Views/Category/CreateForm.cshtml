@model CreateCategoryRequest

<div class="row p-4">
	<div class="col-12">
		<form method="post" asp-action="Create" asp-controller="Category">
			<div class="form-group my-2">
				<input type="text" asp-for="Name" class="form-control my-2" placeholder="Name..."/>
			</div>
			<div class="form-group my-2">
				<input type="submit" class="btn btn-success my-2" value="Save" />
			</div>
		</form>
	</div>
</div>