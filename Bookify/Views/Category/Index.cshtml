@model IList<CategoryViewModel>

@{
	ViewData["Title"] = "Categories";
}

<div class="row p-4">
	<div class="col-12">
		<table class="table table-hover table-responsive table-borderless table-striped">
			<thaed>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thaed>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.Name</td>
						<td>
							<a asp-action="Details" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-success">Details</a>
						</td>
						<td>
							<a asp-action="" asp-controller="" asp-route-id="" class="btn btn-primary">Update</a>
						</td>
						<td>
							<a asp-action="" asp-controller="" asp-route-id="" class="btn btn-danger">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>


<div class="row p-4">
	<div class="col-6">
		<a asp-action="Index" asp-controller="Home" class="btn btn-warning my-1">Back To Home</a>
	</div>
	<div class="col-6 text-end">
		<a asp-action="CreateForm" asp-controller="Category" class="btn btn-success my-1">Add New Category</a>
	</div>
</div>