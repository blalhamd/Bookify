@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
}

<div class="row">
	<div class="col-md-4">
		<img src="~/assets/images/Recipe book-bro.png" width="60" height="60" class="d-block mx-auto" />
		<h5 class="text-center">@ViewData["Title"]</h5>
		<section>
			<form id="account" method="post">
				<hr />
				<div asp-validation-summary="All" class="text-danger" role="alert"></div>
				<div class="form-floating mb-3">
					<input asp-for="Input.UserName" class="form-control" autocomplete="UserName" aria-required="true" placeholder="UserName/Email" />
					<label asp-for="Input.UserName" class="form-label">UserName</label>
					<span asp-validation-for="Input.UserName" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
					<label asp-for="Input.Password" class="form-label">Password</label>
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div class="checkbox mb-3">
					<label asp-for="Input.RememberMe" class="form-label">
						<input class="form-check-input" asp-for="Input.RememberMe" />
						@Html.DisplayNameFor(m => m.Input.RememberMe)
					</label>
				</div>
				<div>
					<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-2">Log in</button>
				</div>
				<div>
					<p>
						<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
					</p>
					<p>
						<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
					</p>
					<p>
						<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
					</p>
				</div>
			</form>
		</section>
	</div>
	<div class="col-md-8 col-md-offset-2 d-flex justify-content-center align-items-center">
		<section>
			<img src="~/assets/images/Computer login-rafiki.png" height="300px" />
		</section>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
