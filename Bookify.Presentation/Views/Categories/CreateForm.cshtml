@model CreateCategoryRequest

@{
	ViewData["Title"] = "Add Category";
}

<div class="row p-4">

	<div class="d-none d-md-block col-3" style="background:#eee;">
		<img src="~/assets/images/Novelist writing-cuate.png" height="200"/>
	</div>

	<div class="col-9">
		<div class="card">
			<div class="card-header">
				<h6 class="card-title my-2">Add New Category</h6>
			</div>
			<div class="card-body">
				<form method="post" asp-action="Create" asp-controller="Categories">
					<div class="form-group my-2">
						<input type="text" asp-for="Name" class="form-control my-2" placeholder="Name..." />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="form-group my-2">
						<button type="submit" class="btn btn-primary d-block ms-auto my-2">
							<i class="bi bi-check-lg"></i> Save
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
