@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

@inject IWebHostEnvironment _WebHostEnvironment;

@{
	var ImageExist = File.Exists($"{_WebHostEnvironment.WebRootPath}/assets/images/errors/{Model.ErrorCode}.png");
	var ImagePath = $"/assets/images/errors/{(ImageExist ? Model.ErrorCode : "500")}.png";
}

<div class="row p-4">
	<div class="col-md-4 col-12 d-block mx-auto">
		<h3 class="text-center my-3">@Model.ErrorMessage: <span class="text-danger fw-bold">@Model.ErrorCode</span></h3>
		<img src="@ImagePath" width="100%" height="300" />
		<div class="row">
			<div class="col-5 d-block mx-auto">
				<a class="btn btn-primary my-3" href="/Home">Back To Home</a>
			</div>
		</div>
	</div>
</div>

