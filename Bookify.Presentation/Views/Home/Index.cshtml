@model IList<BookViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row justify-content-center">
       <div class="col-md-9 col-12 d-flex justify-content-center align-items-start">
            <div class="image-container col-md-5">
                <img src="~/assets/images/Revenue-rafiki.png" alt="Dashboard" class="img-fluid" />
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary my-2" id="btn">Go to Dashboard</a>
            </div>
            <div class="image-container col-md-5">
                <img src="~/assets/images/Software code testing-amico.png" alt="search" class="img-fluid" />
                <a asp-controller="Search" asp-action="Index" class="btn btn-primary my-2" id="btn">Search</a>
            </div>
       </div>
        <div class="col-md-3 card col-12" id="side">
           <h5 class="my-3">Recently eight books</h5>
           @foreach (var item in Model)
            {
                <div class="row d-flex justify-content-between">
                    <div class="col-md-3 col-12">
                        <img src="~/assets/images/@item.ImageUrl" class="card-image" width="100%" height="50"/>
                    </div>
                <div class="col-md-9 col-12">
                        <a asp-controller="Search" asp-action="Details" asp-route-id="@item.Id" id="Search">@item.Title</a>
                        <h6 class="text-muted my-1" style="color: white !important; opacity: .7">@item.AuthorName</h6>
                </div>
                </div>
                <hr />
            }
       </div>
    </div>
</div>

